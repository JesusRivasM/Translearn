        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="traducción en francés..." />

    <Button
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check" />

    <TextView
        android:id="@+id/pregunta2"
